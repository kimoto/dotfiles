# Install:
# -------------------------------------------------------------------------
# $ wget -O- https://raw.github.com/kimoto/dotfiles/main/README | sh
# -------------------------------------------------------------------------
#
cd $HOME
git clone --recursive git@github.com:kimoto/dotfiles.git
./dotfiles/bin/mkworld.sh
