[alias]
  st = status
  ci = commit -a -v
  di = diff
  dif = diff
  co = checkout
  pu = push

[core]
  excludesfile = ~/.gitignore
  editor = nvim
  autoCRLF = false
  syntax-theme = Solarized (dark)

[diff]
  algorithm = patience
  colorMoved = default

[diff "exif"]
  textconv = exiftool

[gui]
  encoding = utf-8

[i18n]
  commitencoding = utf-8

[interactive]
  diffFilter = delta --color-only

[merge]
  ff = false
  conflictstyle = diff3

[pager]
  log = bat
  show = bat
  diff = bat

[push]
  default = current

[pull]
  ff = only

[user]
  name = kimoto
  email = your-username@users.noreply.github.com

[url "git@github.com:"]
  pushinsteadof = "git://github.com/"
  pushinsteadof = "https://github.com/"

# --------
# plugins
# --------
[delta]
  side-by-side = true
  # navigate = true
  dark = true
  line-numbers = true
  #true-color = always
  syntax-theme = Solarized (dark)
