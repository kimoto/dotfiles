[user]
  name = kimoto
  email = sub+peerler@gmail.com

[alias]
  st = status
  ci = commit -a
  di = diff
  dif = diff
  dci = svn dcommit
  co = checkout
  pu = push

# 覚えるのめんどいgit操作系は日本語でbindすることに
  modosu = reset --hard HEAD
  logall = !git log --all --patch --color | git name-rev --stdin | $PAGER
  show-graph = log --graph --abbrev-commit --pretty=oneline

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[color "branch"]
  current = red
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan


[color "diff"]
  commit = black white bold
  meta = blue
  frag = black
  old = red
  new = green

[i18n]
  commitencoding = utf-8

[core]
	excludesfile = ~/.gitignore
	editor = vim
	autoCRLF = false

[push]
  default = current

